@using PagedList;
@using PagedList.Mvc;


@*@model IEnumerable<News_MVC.Models.ArticleTags>*@
@model IPagedList<News_MVC.Models.ArticleTags>

<p>
    @*<h3>@ViewBag.Message</h3>*@
    
    <h2>Articles by tag @ViewBag.Tag</h2>
</p>
<br/>

<table class="table">
    @*<tr>
        <th>
            @Html.DisplayNameFor(model => model.Articles.ArticleName)
        </th>

    </tr>*@

@foreach (var item in Model) {
    <tr>
        <td>
            @*@Html.DisplayFor(modelItem => item.Articles.ArticleName)*@
            @Html.ActionLink(item.Articles.ArticleName, "ArticleContent", "Articles", new { id = item.Articles.ArticleID }, null)
        </td>

    </tr>
}

</table>

@Html.PagedListPager(Model, page => Url.Action("TagArticleList", new { page }))

<br />

<div>

    @Html.Partial("_TagsList", ViewData["Tags"])
</div>
